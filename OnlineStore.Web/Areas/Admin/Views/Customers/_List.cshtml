<script src="~/assets/admin/js/jquery.2.1.1.min.js"></script>
<script src="~/assets/admin/js/app/customer/list.js"></script>
@using OnlineStore.Common
@model IEnumerable<OnlineStore.Data.Entities.Customer>
@{
    var info = (SortingPagingInfo)TempData["SortingPagingInfo"];
}
<div class="row">
    <div class="col-xs-12">
        <table id="dynamic-table" class="table table-striped table-bordered table-hover dataTable">
            <thead>
                <tr>
                    <th class="center sorting_disabled">
                        <label class="pos-rel">
                            <input type="checkbox" class="ace" />
                            <span class="lbl"></span>
                        </label>
                    </th>
                    <th class="sorting sortable" data-sortfield="Name">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th class="sorting sortable" data-sortfield="Name">
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th class="sorting sortable" data-sortfield="Name">
                        @Html.DisplayNameFor(model => model.DateOfBirth)
                    </th>
                    <th class="sorting sortable" data-sortfield="Telephone">
                        @Html.DisplayNameFor(model => model.Telephone)
                    </th>
                    <th class="sorting sortable" data-sortfield="Email">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th class="sorting sortable" data-sortfield="Description">
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th class="sorting_disabled"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td class="center">
                            <label class="pos-rel">
                                <input type="checkbox" class="ace" />
                                <span class="lbl"></span>
                            </label>
                        </td>
                        <td>
                            <a href="~/Admin/Customers/Details/@item.Id">
                                @Html.DisplayFor(modelItem => item.Name)
                            </a>
                        </td>
                        <td>
                            @(item.Gender == 1 ? "Nam" : (item.Gender == 0 ? "Nữ" : ""))
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfBirth)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telephone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <div class="hidden-sm hidden-xs action-buttons">
                                <a class="blue" href="~/Admin/Customers/Details/@item.Id">
                                    <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                </a>
                                <a class="green" href="~/Admin/Customers/Edit/@item.Id">
                                    <i class="ace-icon fa fa-pencil bigger-130"></i>
                                </a>
                                <a class="red" href="~/Admin/Customers/Delete/@item.Id">
                                    <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                </a>
                            </div>
                            <div class="hidden-md hidden-lg">
                                <div class="inline pos-rel">
                                    <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                        <i class="ace-icon fa fa-cog icon-only bigger-110"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                        <li>
                                            <a href="~/Admin/Customers/Details/@item.Id" class="tooltip-info" data-rel="tooltip" title="View">
                                                <span class="blue">
                                                    <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="~/Admin/Customers/Edit/@item.Id" class="tooltip-success" data-rel="tooltip" title="Edit">
                                                <span class="green">
                                                    <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="~/Admin/Customers/Delete/@item.Id" class="tooltip-error" data-rel="tooltip" title="Delete">
                                                <span class="red">
                                                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div><!-- /.span -->
</div><!-- /.row -->

@Html.Action("_Paging", "Common", new { totalRows = info.TotalRows, currentPage = info.CurrentPage, pageSize = info.PageSize, controlName = "/Customers/Index" })
