<script src="~/assets/admin/js/jquery.2.1.1.min.js"></script>
<script src="~/assets/admin/js/app/product/list.js"></script>
@using OnlineStore.Common
@model IEnumerable<OnlineStore.Data.Entities.Product>
@{
    var info = (SortingPagingInfo)TempData["SortingPagingInfo"];
}
<div class="row">
    <div class="col-xs-12">
        <table id="dynamic-table" class="table table-striped table-bordered table-hover dataTable">
            <thead>
                <tr>
                    @*<th class="center sorting_disabled">
                        <label class="pos-rel">
                            <input type="checkbox" class="ace" />
                            <span class="lbl"></span>
                        </label>
                    </th>*@
                    <th class="sorting sortable" data-sortfield="Name">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th class="sorting sortable" data-sortfield="ShortDescrition">
                        @Html.DisplayNameFor(model => model.ShortDescrition)
                    </th>
                    <th class="sorting sortable" data-sortfield="Description">
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th class="sorting sortable" data-sortfield="Price">
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th class="sorting sortable" data-sortfield="Featured">
                        @Html.DisplayNameFor(model => model.Featured)
                    </th>
                    <th class="sorting sortable" data-sortfield="Publish">
                        @Html.DisplayNameFor(model => model.Publish)
                    </th>
                    <th class="sorting sortable" data-sortfield="Color">
                        @Html.DisplayNameFor(model => model.Color)
                    </th>
                    <th class="sorting sortable" data-sortfield="StatusId">
                        @Html.DisplayNameFor(model => model.StatusId)
                    </th>
                    <th class="sorting sortable" data-sortfield="SubCategoryId">
                        @Html.DisplayNameFor(model => model.SubCategoryId)
                    </th>
                    <th class="sorting sortable" data-sortfield="BrandId">
                        @Html.DisplayNameFor(model => model.BrandId)
                    </th>
                    <th class="sorting sortable" data-sortfield="UnitId">
                        @Html.DisplayNameFor(model => model.UnitId)
                    </th>
                    <th class="sorting sortable" data-sortfield="SupplierId">
                        @Html.DisplayNameFor(model => model.SupplierId)
                    </th>
                    <th class="sorting_disabled"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        @*<td class="center">
                            <label class="pos-rel">
                                <input type="checkbox" class="ace" />
                                <span class="lbl"></span>
                            </label>
                        </td>*@
                        <td>
                            <a href="~/Admin/Products/Details/@item.Id">
                                @Html.DisplayFor(modelItem => item.Name)
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShortDescrition)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @{
                                if (item.Featured == true)
                                {
                                    <span class="label label-info arrowed">Nổi bật</span>
                                }
                                else
                                {
                                    <span class="label label-danger arrowed">Bình thường</span>
                                }
                            }
                        </td>
                        <td>
                            @{
                                if (item.Publish == true)
                                {
                                    <span class="label label-info arrowed">Hiển thị</span>
                                }
                                else
                                {
                                    <span class="label label-danger arrowed">Ẩn</span>
                                }
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Color)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StatusId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubCategory.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Brand.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unit.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SupplierId)
                        </td>
                        <td>
                            <div class="hidden-sm hidden-xs action-buttons">
                                <a class="blue" href="~/Admin/Products/Details/@item.Id">
                                    <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                </a>
                                <a class="green" href="~/Admin/Products/Edit/@item.Id">
                                    <i class="ace-icon fa fa-pencil bigger-130"></i>
                                </a>
                                <a class="red" href="~/Admin/Products/Delete/@item.Id">
                                    <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                </a>
                            </div>
                            <div class="hidden-md hidden-lg">
                                <div class="inline pos-rel">
                                    <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                        <i class="ace-icon fa fa-cog icon-only bigger-110"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                        <li>
                                            <a href="~/Admin/Products/Details/@item.Id" class="tooltip-info" data-rel="tooltip" title="View">
                                                <span class="blue">
                                                    <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="~/Admin/Products/Edit/@item.Id" class="tooltip-success" data-rel="tooltip" title="Edit">
                                                <span class="green">
                                                    <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="~/Admin/Products/Delete/@item.Id" class="tooltip-error" data-rel="tooltip" title="Delete">
                                                <span class="red">
                                                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div><!-- /.span -->
</div><!-- /.row -->

@Html.Action("_Paging", "Common", new { totalRows = info.TotalRows, currentPage = info.CurrentPage, pageSize = info.PageSize, controlName = "/Products/Index" })
