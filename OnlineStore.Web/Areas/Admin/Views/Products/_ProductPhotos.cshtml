@using OnlineStore.Common
@model OnlineStore.Data.Entities.Photo
@{
    var selectedPhotos = (List<OnlineStore.Data.Entities.Photo>)Session[CommonConstants.PHOTO_SESSION];
}

<div class="row" id="mode-list">
    <div class="col-xs-12">
        <table id="dynamic-table" class="table table-striped table-bordered table-hover dataTable">
            <thead>
                <tr>
                    <th class="center">

                    </th>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FileSize)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Extension)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in selectedPhotos.OrderBy(x => x.Title))
                {
                    <tr>
                        <td class="center">
                            <a href="#" onclick="javascript:fnRemoveProductPhoto(@item.Id);">Xóa</a>
                        </td>
                        <td style="text-align: center;">
                            <img height="60" width="60" src="~/@item.Url" title="@item.Title" />
                        </td>
                        <td>
                            <a href="~/Admin/Photos/Details/@item.Id">
                                @Html.DisplayFor(modelItem => item.Title)
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FileSize)
                        </td>
                        <td>
                            @(Html.DisplayFor(modelItem => item.Extension).ToString().ToLower())
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {

    });
</script>