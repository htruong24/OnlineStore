<script src="~/assets/admin/js/jquery.2.1.1.min.js"></script>
<script src="~/assets/admin/js/app/shipping-address/list.js"></script>
@using OnlineStore.Common
@model IEnumerable<OnlineStore.Data.Entities.ShippingAddress>
@{
    var info = (SortingPagingInfo)TempData["SortingPagingInfo"];
}
<div class="row">
    <div class="col-xs-12">
        <table id="dynamic-table" class="table table-striped table-bordered table-hover dataTable">
            <thead>
                <tr>
                    <th class="sorting sortable" data-sortfield="Name">
                        @Html.DisplayNameFor(model => model.CustomerId)
                    </th>
                    <th class="sorting sortable" data-sortfield="Name">
                        @Html.DisplayNameFor(model => model.Value)
                    </th>
                    <th class="sorting sortable" data-sortfield="Name">
                        @Html.DisplayNameFor(model => model.PostalCode)
                    </th>
                    <th class="sorting sortable" data-sortfield="Category">
                        @Html.DisplayNameFor(model => model.CityId)
                    </th>
                    <th class="sorting sortable" data-sortfield="Category">
                        @Html.DisplayNameFor(model => model.Note)
                    </th>
                    <th class="sorting_disabled"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="~/Admin/ShippingAddresses/Details/@item.Id">
                                @Html.DisplayFor(modelItem => item.Customer.Name)
                            </a>
                        </td>
                        <td>
                            @Html.ValueFor(modelItem => item.Value)
                        </td>
                        <td>
                            @Html.ValueFor(modelItem => item.PostalCode)
                        </td>
                        <td>
                            @Html.ValueFor(modelItem => item.City.Name)
                        </td>
                        <td>
                            @Html.ValueFor(modelItem => item.Note)
                        </td>
                        <td>
                            <div class="hidden-sm hidden-xs action-buttons">
                                <a class="blue" href="~/Admin/ShippingAddresses/Details/@item.Id">
                                    <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                </a>
                                <a class="green" href="~/Admin/ShippingAddresses/Edit/@item.Id">
                                    <i class="ace-icon fa fa-pencil bigger-130"></i>
                                </a>
                                <a class="red" href="~/Admin/ShippingAddresses/Delete/@item.Id">
                                    <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                </a>
                            </div>
                            <div class="hidden-md hidden-lg">
                                <div class="inline pos-rel">
                                    <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                        <i class="ace-icon fa fa-cog icon-only bigger-110"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                        <li>
                                            <a href="~/Admin/ShippingAddresses/Details/@item.Id" class="tooltip-info" data-rel="tooltip" title="View">
                                                <span class="blue">
                                                    <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="~/Admin/ShippingAddresses/Edit/@item.Id" class="tooltip-success" data-rel="tooltip" title="Edit">
                                                <span class="green">
                                                    <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="~/Admin/ShippingAddresses/Delete/@item.Id" class="tooltip-error" data-rel="tooltip" title="Delete">
                                                <span class="red">
                                                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@Html.Action("_Paging", "Common", new { totalRows = info.TotalRows, currentPage = info.CurrentPage, pageSize = info.PageSize, controlName = "/ShippingShippingAddresses/Index" })
