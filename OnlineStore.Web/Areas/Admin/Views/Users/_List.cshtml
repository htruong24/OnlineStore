<script src="~/assets/admin/js/jquery.2.1.1.min.js"></script>
<script src="~/assets/admin/js/app/user/list.js"></script>

@using OnlineStore.Common
@model IEnumerable<OnlineStore.Data.Entities.User>
@{
    var info = (SortingPagingInfo)TempData["SortingPagingInfo"];
}

<div class="row">
    <div class="col-xs-12">
        <table id="dynamic-table" class="table table-striped table-bordered table-hover dataTable">
            <thead>
                <tr>
                    <th class="center sorting_disabled">
                        <label class="pos-rel">
                            <input type="checkbox" class="ace"/>
                            <span class="lbl"></span>
                        </label>
                    </th>
                    <th class="sorting sortable" data-sortfield="Image">
                        @Html.DisplayNameFor(model => model.Image)
                    </th>
                    <th class="sorting sortable" data-sortfield="Username">
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th class="sorting sortable" data-sortfield="Name">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th class="sorting sortable" data-sortfield="Gender">
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th class="sorting sortable" data-sortfield="DateOfBirth">
                        <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i> 
                        @Html.DisplayNameFor(model => model.DateOfBirth)</th>
                    <th class="sorting sortable" data-sortfield="Address">
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th class="sorting sortable" data-sortfield="Telephone">
                        @Html.DisplayNameFor(model => model.Telephone)
                    </th>
                    <th class="sorting sortable" data-sortfield="CellPhone">
                        @Html.DisplayNameFor(model => model.CellPhone)
                    </th>
                    <th class="sorting sortable" data-sortfield="Fax">
                        @Html.DisplayNameFor(model => model.Fax)
                    </th>
                    <th class="sorting sortable" data-sortfield="Email">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th class="sorting sortable" data-sortfield="TaxCode">
                        @Html.DisplayNameFor(model => model.TaxCode)
                    </th>
                    <th class="sorting sortable" data-sortfield="Active">
                        @Html.DisplayNameFor(model => model.Active)
                    </th>
                    <th class="sorting sortable" data-sortfield="CreatedOn">
                        <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>@Html.DisplayNameFor(model => model.CreatedOn)
                    </th>
                    @*<th class="sorting sortable" data-sortfield="CreatedBy">
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </th>*@
                    <th class="sorting sortable" data-sortfield="ModifiedOn">
                        <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>@Html.DisplayNameFor(model => model.ModifiedOn)
                    </th>
                    @*<th class="sorting sortable" data-sortfield="ModifiedBy">
                        @Html.DisplayNameFor(model => model.ModifiedBy)
                    </th>*@
                    <th class="sorting_disabled"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="center">
                            <label class="pos-rel">
                                <input type="checkbox" class="ace"/>
                                <span class="lbl"></span>
                            </label>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Image)
                        </td>
                        <td>
                            <a href="~/Admin/Users/Details/@item.Id">
                                @Html.DisplayFor(modelItem => item.Username)
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfBirth)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telephone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CellPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fax)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TaxCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Active)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.CreatedBy)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifiedOn)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.ModifiedBy)
                        </td>*@
                        <td>
                            <div class="hidden-sm hidden-xs action-buttons">
                                <a class="blue" href="~/Admin/Users/Details/@item.Id">
                                    <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                </a>
                                <a class="green" href="~/Admin/Users/Edit/@item.Id">
                                    <i class="ace-icon fa fa-pencil bigger-130"></i>
                                </a>
                                <a class="red" href="~/Admin/Users/Delete/@item.Id">
                                    <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                </a>
                            </div>
                            <div class="hidden-md hidden-lg">
                                <div class="inline pos-rel">
                                    <button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                        <i class="ace-icon fa fa-cog icon-only bigger-110"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                        <li>
                                            <a href="~/Admin/Users/Details/@item.Id" class="tooltip-info" data-rel="tooltip" title="View">
                                                <span class="blue">
                                                    <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="~/Admin/Users/Edit/@item.Id" class="tooltip-success" data-rel="tooltip" title="Edit">
                                                <span class="green">
                                                    <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="~/Admin/Users/Delete/@item.Id" class="tooltip-error" data-rel="tooltip" title="Delete">
                                                <span class="red">
                                                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div><!-- /.span -->
</div><!-- /.row -->

@Html.Action("_Paging", "Common", new { totalRows = info.TotalRows, currentPage = info.CurrentPage, pageSize = info.PageSize, controlName = "/Users/Index" })
