@*<script src="~/assets/admin/js/jquery.2.1.1.min.js"></script>*@

<div class="main">
    <div class="container">
        <div class="row">
            
            @Html.Partial("_Filter")
            
            <div class="col-sm-9 col-right">
                <div class="banner">
                    <a href="#"><img alt="" src="~/assets/web/images/ads/ads-17.jpg"></a>
                </div>
                <div class="page-title">
                    <h1>TÊN DANH MỤC</h1>
                </div>
                <div class="toolbar">
                    <div class="sorter">
                        <p class="view-mode">
                            <label>Xem đưới dạng:</label>
                            <a class="grid view-selected" onclick="toggleViewMode();" title="Grid">Lưới</a>&nbsp;
                            <a class="list" onclick="toggleViewMode();" title="List" href="#">Danh sách</a>&nbsp;
                        </p>
                    </div><!-- /.sorter -->
                    <div class="pager">
                        <div class="sort-by hidden-xs">
                            <label>Sắp xếp theo:</label>
                            <select class="form-control input-sm">
                                <option selected="selected">Vị trí</option>
                                <option>Tên</option>
                                <option>Giá</option>
                            </select>
                            <a title="Set Descending Direction" href="#"><span class="fa fa-sort-amount-desc"></span></a>
                        </div>
                        <div class="limiter hidden-xs">
                            <label>Hiển thị:</label>
                            <div class="limiter-inner">
                                <select class="form-control input-sm">
                                    <option>10</option>
                                    <option selected="selected">20</option>
                                    <option>30</option>
                                    <option>40</option>
                                </select>
                            </div>
                        </div>
                    </div><!--- /.pager -->
                </div><!-- /.toolbar -->
                <div id="viewmode-grid">@Html.Action("_Grid", "Categories")</div>
                <div id="viewmode-list" style="display:none;">@Html.Action("_List", "Categories")</div>
                <div class="toolbar">
                    <div class="sorter">
                        <p class="view-mode">
                            <label>View as:</label>
                            <a class="grid view-selected" onclick="toggleViewMode();" title="Grid">Grid</a>&nbsp;
                            <a class="list" title="List" onclick="toggleViewMode();" href="#">List</a>&nbsp;
                        </p>
                    </div><!-- /.sorter -->
                    <div class="pager">
                        <div class="sort-by hidden-xs">
                            <label>Sắp xếp theo:</label>
                            <select class="form-control input-sm">
                                <option selected="selected">Vị trí</option>
                                <option>Tên</option>
                                <option>Giá</option>
                            </select>
                            <a title="Set Descending Direction" href="#"><span class="fa fa-sort-amount-desc"></span></a>
                        </div>
                        <div class="limiter hidden-xs">
                            <label>Hiển thị:</label>
                            <div class="limiter-inner">
                                <select class="form-control input-sm">
                                    <option>10</option>
                                    <option selected="selected">20</option>
                                    <option>30</option>
                                    <option>40</option>
                                </select>
                            </div>
                        </div>
                    </div><!-- /.pager -->
                </div><!-- /.toolbar -->
            </div><!-- /.col-right -->
        </div>
    </div>
</div>


<style>
    .view-selected, .view-selected:before {
        color: #fff !important;
        background: #d8373e;
        border-color: #d8373e;
    }
</style>

<script>
    $(document).ready(function () {
        /* slider price */
        var currencies = "$";
        var toolbar_status = "1";
        var rate = "1";
        var min = "99"
        min = Number(min);
        var max = "999"
        max = Number(max);
        var currentMinPrice = "99"
        currentMinPrice = Number(currentMinPrice);
        var currentMaxPrice = "999"
        //alert('min: '+min+'--max: '+ max+ 'currentMin: '+currentMinPrice);
        currentMaxPrice = Number(currentMaxPrice);
        var params = "";
        params = $.trim(params);
        //slider
        $("#slider-range").slider({
            range: true,
            min: min,
            max: max,
            values: [currentMinPrice, currentMaxPrice],
            slide: function (event, ui) {
                $("#amount").val(currencies + ui.values[0] + " - " + currencies + ui.values[1]);
                $('input[name="first_price"]').val(ui.values[0]);
                $('input[name="last_price"]').val(ui.values[1]);
            },
            stop: function (event, ui) {
            }
        });

        $("#amount").val(currencies + $("#slider-range").slider("values", 0) +
            " - " + currencies + $("#slider-range").slider("values", 1));
        $('input[name="first_price"]').val($("#slider-range").slider("values", 0));
        $('input[name="last_price"]').val($("#slider-range").slider("values", 1));

        //search price from input box
        $('#search_price').each(function () {
            $(this).live('click', function () {
                return false;
            })
        });
        $('#slider-range a:first').addClass('first_item');
        $('#slider-range a:last').addClass('last_item');
    });

    function toggleViewMode() {
        $("#viewmode-grid").toggle();
        $("#viewmode-list").toggle();

        $(".grid").toggleClass("view-selected");
        $(".list").toggleClass("view-selected");
    }
</script>