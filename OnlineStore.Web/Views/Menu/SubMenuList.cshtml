@model IEnumerable<OnlineStore.Data.Entities.Function>

<div id="subMenu">
    <ul class="sub-menu">
        @{
            foreach (var function in Model)
            {
                <li id="@function.Id">
                    <a data-toggle="tooltip" title="@function.Description" href="javascript:fnChangeMenu('@function.Id', '@function.Name')">
                        <i class=""></i> @function.Name
                    </a>
                </li>
            }
        }
    </ul>
</div>

<div class="body-content col-md-12">
    <div id="mainContainer">
        <div class="col-sm-12">
            @{
                foreach (var function in Model)
                {
                    <div class="col-md-3">
                        <div class="thumbnail" style="min-height: 162px; background: brown;">
                            <div class="caption row">
                                <div class="col-md-12">
                                    <div class="pull-left">
                                        <span style="font-size: 20px; font-weight: bold;"> @function.Name</span>
                                    </div>
                                    <div class="pull-right">
                                        <a class="btn btn-warning" href="javascript:fnChangeMenu('@function.Id', '@function.Name')">
                                            <i class="fa fa-chevron-circle-right"></i> Xem chi tiết
                                        </a>
                                    </div>
                                </div>
                                <p class="col-md-12">@function.Description</p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function() {
        var funcId = fnGetHashParameter("funcId");
        if (funcId !== "") {
            $("#bodyContent").find(".active").removeClass("active");
            $("#" + funcId).addClass("active");
        }
    })
</script>

<style>
    .thumbnail .caption {
        color: cornsilk;
    }

    .btn-warning {
        background-color: darksalmon;
        border-color: darksalmon;
    }
    
</style>

