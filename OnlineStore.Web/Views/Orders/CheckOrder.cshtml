
@{
    ViewBag.Title = "Theo dõi đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="search-order-info">
                    <h4>THÔNG TIN ĐƠN HÀNG</h4>
                    <form id="frmSearchOrder">
                        <div class="form-group">
                            <label class="control-label">Email người đặt hàng <em>*</em></label>
                            <input type="text" name="Email" class="form-control">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Mã đơn hàng <em>*</em></label>
                            <input type="text" name="OrderCode" class="form-control">
                        </div>
                        <div style="text-align:center;">
                            <input type="button" class="btn btn-default btn-md" onclick="SearchOrder()"  value="TÌM KIẾM">
                        </div>
                    </form>
                </div>
                <hr />
                <div id="order-info">
                    @*Order information*@
                    <div class="widget-box">
                        <div class="widget-header widget-header-flat">
                            <h4 class="widget-title">THÔNG TIN ĐƠN HÀNG</h4>
                        </div>
                        <div class="widget-body">
                            <div class="widget-main">
                            </div>
                        </div>
                    </div>
                    @*Order Details information*@
                    <div class="widget-box">
                        <div class="widget-header widget-header-flat">
                            <h4 class="widget-title smaller">Chi tiết đơn hàng</h4>
                        </div>
                        <div class="widget-body">
                            <div class="widget-main">
                                <div class="table-responsive">
                                    <table class="table custom-table">
                                        <thead>
                                            <tr class="first last">
                                                <th>Ảnh sản phẩm</th>
                                                <th>Tên sản phẩm</th>
                                                <th>Số lượng</th>
                                                <th>Đơn giá</th>
                                                <th>Tổng cộng</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    $(document).ready(function () {
        $(".chk-brand").on("change", function (e) {
            var brands = GetBrands();
            $("#hdBrands").val(brands);
            fnSearchWeb();
        });
    });

    function SearchOrder() {
        var postData = $("#frmSearchOrder").serializeArray(); 
        $.ajax(
        {
            url: "/Orders/SearchOrder",
            type: "POST",
            data: postData,
            success: function (data) {
                $("#cart-container").html(data);
            },
            error: function (xhr, textStatus, error) {
                toastr.error(error);
            }
        });
    }
</script>