@using OnlineStore.Common
@{
    var info = (SortingPagingInfo)TempData["SortingPagingInfo"] ?? new SortingPagingInfo();
}

<div class="nav-search" id="nav-search">
    @*<span class="input-icon" style="display:none;">
        <input type="text" id="txtSearchKey" placeholder="Tìm kiếm ..." class="nav-search-input" id="nav-search-input" autocomplete="off" />
        <i class="ace-icon fa fa-search nav-search-icon"></i>
    </span>*@

    <form id="frmSearch" class="form-search">
        @*Parameters for searching*@
        <input type="hidden" name="SortField" id="hdSortField" value="@info.SortField" />
        <input type="hidden" name="SortDirection" id="hdSortDirection" value="@info.SortDirection" />
        <input type="hidden" name="TotalPages" id="hdTotalPages" value="@info.PageCount" />
        <input type="hidden" name="PageSize" id="hdPageSize" value="@info.PageSize" />
        <input type="hidden" name="CurrentPage" id="hdCurrentPage" value="@info.CurrentPage" />
        <input type="hidden" name="Keyword" id="hdKeyword" value="" />
        <input type="hidden" name="CategoryId" id="hdCategoryId" value="@ViewBag.CategoryId"/>
        <input type="hidden" name="SubCategoryId" id="hdSubCategoryId" value="@ViewBag.SubCategoryId" />
        <input type="hidden" name="PriceRange" id="hdPriceRange" />
        <input type="hidden" name="Brands" id="hdBrands"/>
    </form>
</div><!-- /.nav-search -->

<style>
    .form-search {
        border: 0px;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $("#txtSearchKey").on("keyup", function (event) {
            $("#hdKeyword").val($("#txtSearchKey").val());
            if (event.keyCode === 13) {
                fnSearch();
            }
        });
    });
</script>